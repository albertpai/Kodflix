{
  "name": "kodflix",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "mongodb": "^3.1.8",
    "nodemon": "^1.18.6",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^1.1.5"
  },
  "scripts": {
    "start": "SET NODE_ENV=production npm-run-all -s build _start-backend",
    "start-dev": "SET NODE_ENV=development & npm-run-all -p _start-db _start-frontend _start-backend",
    "_start-db": "mongod",
    "_start-frontend": "react-scripts start",
    "_start-backend": "nodemon src/backend/app.js",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3"
  },
  "proxy": "http://localhost:3001"
}
